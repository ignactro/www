- id = item.identifier[1..-2]
- title = (id =~ $rgpat ? "IRTF " : "") + @item[:title]
- base = @site.config[:base_url] + "/"
- email = (id =~ $rgpat ? $rgs[id].list : "irtf-chair@irtf.org")
- fb = (id =~ $rgpat ? $rgs[id].chairs.map {|x| x.fb }.compact.join(", ") : "")

%head
  %meta{ :charset => "utf-8" }

  -# Always force latest IE rendering engine (even in intranet) & Chrome Frame
  %meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }

  -# Mobile viewport optimized: j.mp/bplateviewport
  %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

  %title= title

  %link{ :href => @loc + "style.css", :rel => "stylesheet", :type => "text/css" }
  <!--[if lt IE 8]>
  %link{ :href => @loc + "ie.css", :rel => "stylesheet", :type => "text/css",
         :media => "screen, projection" }
  <![endif]-->

  -# https://developers.facebook.com/docs/opengraph/
  %meta{ :property => "og:title", :content => title }
  %meta{ :property => "og:type", :content => "non_profit" } 
  %meta{ :property => "og:url", :content => base + id }
  %meta{ :property => "og:image", :content => base + "img/irtf.png" }
  %meta{ :property => "og:site_name", :content => "IRTF" }
  %meta{ :property => "og:description", :content => title }
  %meta{ :property => "og:email", :content => email }
  %meta{ :property => "fb:admins", :content => "584143839" + (fb.length > 0 ? ", " + fb : "") }