    if($('.socialshareprivacy').length > 0) {
      $('.socialshareprivacy').socialSharePrivacy({
        services : {
          facebook : {
            'app_id'      : '194983820572921',
            'dummy_img'   : 'socialshareprivacy/images/dummy_facebook_en.png',
            'txt_info'    : 'Two clicks for more online privacy: Click here to enable the Facebook button. Enabling the button alone already transmits personal information to third parties.',
            'txt_fb_off'  : 'Facebook link active',
            'txt_fb_on'   : 'Facebook link inactive',
            'language'    : 'en_US',
            'action'      : 'recommend'            
          }, 
          twitter : {
            'txt_info'    : 'Two clicks for more online privacy: Click here to enable the Twitter button. Enabling the button alone already transmits personal information to third parties.',
            'txt_fb_off'  : 'Twitter link active',
            'txt_fb_on'   : 'Twitter link inactive',
            'language'    : 'en'
          },
          gplus : {
            'txt_info'    : 'Two clicks for more online privacy: Click here to enable the Google+ button. Enabling the button alone already transmits personal information to third parties.',
