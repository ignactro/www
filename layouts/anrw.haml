- year = item.path.split("/")[2]

!!! 5
%html{ :lang => "en" }
  = render "/head_.*"

  %body
    %nav.navbar.navbar-default
      .container-fluid
        .navbar-heading
          %img{:src => "../../img/anrp_logo_#{year}.png", height: "100vh"} 
        -#%small ACM, IRTF & ISOC
        -#%br
        -#Applied Networking Research Workshop #{year}
        .navbar-header
          %a.navbar-brand{ :href => "../" } ANRW Series
          %button.navbar-toggle.collapsed{ :type => "button", "data-toggle" => "collapse", "data-target" => "#anrw-collapse", "aria-expanded" => "false" }
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
        .collapse.navbar-collapse#anrw-collapse
          %ul.nav.navbar-nav
            - (@items.find_all(%r{./#{year}}).sort_by do |item| item.path ? item.path : "" end).each do |item|
              - if (item.path =~ %r{(/|html)$} and not item[:menu_hidden] and not item[:other])
                %li{ :class => ("active" if item[:menu] == @item[:menu])}
                  %a{ :href => "." + item.path.split(year)[-1] } #{item[:menu]}
            - if @items.find_all(%r{./#{year}}).count{|x| x[:other]} > 0
              %li.dropdown{ :class => ("active" if @items.find_all(%r{./#{year}}).count{|x| x[:other] and x[:menu] == @item[:menu]} > 0)}
                %a.dropdown-toggle{ "data-toggle" => "dropdown", :role => "button", "aria-haspopup" => "true", "aria-expanded" => "false" }
                  Other
                  %span.caret
                %ul.dropdown-menu
                  - (@items.find_all(%r{./#{year}}).sort_by do |item| item.path ? item.path : "" end).each do |item|
                    - if (item.path =~ %r{(/|html)$} and not item[:menu_hidden] and item[:other])
                      %li{ :class => ("active" if item[:menu] == @item[:menu])}
                        %a{ :href => "." + item.path.split(year)[-1] } #{item[:menu]}



    .container-fluid
      -# .alert.alert-danger.alert-dismissible
      -#   %button{ :type => "button", :class => "close", "data-dismiss" => "alert", "aria-label" => "Close"}
      -#     %span{ "aria-hidden" => "true"} &times;
      -#   %span.glyphicon.glyphicon-alert{ "aria-hidden" => "true" }
      -#   Do not share URL with others yet!
      = yield

    = render "/footer_.*"
    = render "/scripts_.*"
