- id = item.identifier.without_ext.sub("/concluded/", "").tr("/", "")
- title = @item[:title] ? @item[:title] : $rgs[id].name
- abbrev = @item[:title] ? "" :$rgs[id].acronym

-# encoding: utf-8
!!! 5
%html{ :lang => "en" }
  = render "/head_.*", :concluded => false, :loc => ""

  %body.irtf
    = render "/menu_.*", :loc => ""
    .container-fluid
      .row
        .col-sm-8.col-xs-12
          %h1
            #{title}
            %small #{abbrev}
        .col-sm-4.hidden-xs
          %a{:href => "./"}
            %img.img-responsive.pull-right{:src => "img/irtf.png",
                 :alt => "Internet Research Task Force (IRTF)"}
      .row
        - rg = $rgs[id]
        - if rg != nil
          .col-sm-8
            = yield
          .col-sm-4.rightbar
            = render "/rightbar_.*", :loc => ""
        - else
          = yield

    = render "/footer_.*", :loc => "", :irtf => true
    = render "/scripts_.*", :loc => ""
