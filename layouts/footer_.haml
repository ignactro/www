%footer.footer
  .container-fluid
    .row
      - if @irtf
        .col-xs-2.text-muted.small
          IRTF sponsors:
        .col-xs-2.text-muted.small
          %a{ :href => "https://ietf.org/" }
            %img.img-responsive{ :src => relative_path_to("/img/ietf.png"), :width => 100,
                  :alt => "Internet Engineering Task Force (IETF)" }
        .col-xs-2.text-muted.small
          %a{ :href => "https://www.internetsociety.org/" }
            %img.img-responsive{ :src => relative_path_to("/img/isoc.png"), :width => 100,
                  :alt => "Internet Society (ISOC)" }
      - else
        .col-xs-6

      .col-xs-6.text-right.text-muted.small
        %span#ipv6
        -# %a{:href => "http://validator.w3.org/check/referer"} HTML
